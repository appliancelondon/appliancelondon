<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="appliancentre_bookingform_booking" resource="default" engine="innodb" comment="Booking Form Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="reference_number" nullable="false" length="255" comment="Reference Number"/>
        <column xsi:type="varchar" name="service" nullable="false" length="255" comment="Service Type"/>
        <column xsi:type="varchar" name="postcode" nullable="false" length="20" comment="Postcode"/>
        <column xsi:type="varchar" name="appliance_type" nullable="false" length="255" comment="Appliance Type"/>
        <column xsi:type="varchar" name="appliance_subtype" nullable="false" length="255" comment="Appliance Subtype"/>
        <column xsi:type="varchar" name="appliance_make" nullable="false" length="255" comment="Appliance Make"/>
        <column xsi:type="date" name="visit_date" comment="Visit Date"/>
        <column xsi:type="varchar" name="visit_time" nullable="false" length="50" comment="Visit Time"/>
        <column xsi:type="varchar" name="customer_name" nullable="false" length="255" comment="Customer Name"/>
        <column xsi:type="varchar" name="customer_email" nullable="false" length="255" comment="Customer Email"/>
        <column xsi:type="varchar" name="customer_phone" nullable="false" length="50" comment="Customer Phone"/>
        <column xsi:type="text" name="customer_address" nullable="true" comment="Customer Address"/>
        <column xsi:type="text" name="fault_description" nullable="true" comment="Fault Description"/>
        <column xsi:type="varchar" name="model_number" nullable="true" length="255" comment="Model Number"/>
        <column xsi:type="text" name="additional_info" nullable="true" comment="Additional Information"/>
        <column xsi:type="varchar" name="status" nullable="false" length="50" comment="Booking Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Updated At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
    
    <table name="booking_counter" resource="default" engine="innodb" comment="Booking Counter Table">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="counter" padding="10" unsigned="true" nullable="false" default="14174" comment="Counter"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>