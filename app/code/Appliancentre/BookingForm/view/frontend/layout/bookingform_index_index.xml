<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Book a Repair</title>
        <css src="Appliancentre_BookingForm::css/booking-form.css"/>
        <css src="Appliancentre_BookingForm::css/flatpickr.min.css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="bookingform.index" template="Appliancentre_BookingForm::form.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="booking.confirmation" template="Appliancentre_BookingForm::booking/confirmation.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Appliancentre\BookingForm\ViewModel\BookingConfirmation</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
